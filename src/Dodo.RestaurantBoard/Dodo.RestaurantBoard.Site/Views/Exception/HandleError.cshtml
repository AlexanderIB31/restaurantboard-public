@using Dodo.RestaurantBoard.Site.Common.Extensions
@using Dodo.RestaurantBoard.Site.Resources
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    @{ Html.RenderPartial("LinkFavicon"); }
    <link href="@Url.ContentVersioned("/Content/Logon.css")" rel="stylesheet" type="text/css"/>

    @Html.ScriptVersioned("/Scripts/jquery-1.9.min.js")

    <title>@Text.Title_Exception</title>
</head>
<body class="error_bg">
<div class="error_cont">
    <div class="error_head clearfix">
        <div class="error_logo">@Text.Logo</div>
        <div class="error_title">@Text.Exception</div>
    </div>
    <div class="error_body">
        <h1 class="error_header">@Text.ErrorParameterType</h1>
        <div class="errror_code">
            @Html.TextArea("Description", Convert.ToString(TempData["Exception"]), new { rows = "20", cols = "100" })
        </div>
        <div class="error_recommend">
            <p>@Text.Text_Support</p>
        </div>
    </div>
</div>
</body>
<script type="text/javascript">
    $(function() {
        $('#Description').attr('readonly', 'readonly');
    });
</script>
</html>